{
    "name": "electron_template",
    "version": "0.0.1",
    "description": "electron+react+typescript项目模板",
    "main": "./dist/main.js",
    "scripts": {
        "build-main": "cross-env NODE_ENV=production webpack --config ./webpack/webpack.main.prod.config.js",
        "build-renderer": "cross-env NODE_ENV=production webpack --config ./webpack/webpack.renderer.prod.config.js",
        "build": "npm run build-main && npm run build-renderer",
        "start-renderer-dev": "webpack-dev-server --config ./webpack/webpack.renderer.dev.config.js",
        "start-main-dev": "webpack --config ./webpack/webpack.main.config.js && electron ./dist/main.js",
        "start": "rimraf dist && cross-env START_HOT=1 npm run start-renderer-dev",
        "release:win": "rimraf dist && npm run build && electron-builder",
        "postinstall": "electron-builder install-app-deps",
        "format": "prettier --config ./.prettierrc --write ./{src,webpack}/**/*.{ts,tsx,scss,css,js}"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "{src,webpack}/**/*.{js,ts,tsx,json,css,scss,md}": [
            "prettier --config ./.prettierrc --write",
            "git add"
        ]
    },
    "build": {
        "productName": "electron模板",
        "appId": "org.your.productname",
        "mac": {
            "category": "your.app.category.type"
        },
        "directories": {
            "output": "release"
        },
        "files": [
            "dist/",
            "node_modules/",
            "package.json"
        ],
        "linux": {
            "target": "deb"
        },
        "win": {
            "target": "nsis"
        }
    },
    "keywords": [
        "electron",
        "react",
        "typescript"
    ],
    "author": "xieqingtian",
    "license": "ISC",
    "dependencies": {
        "antd": "^3.19.6",
        "axios": "^0.19.0",
        "lodash": "^4.17.11",
        "moment": "^2.24.0",
        "qs": "^6.7.0",
        "react": "^16.8.6",
        "react-dom": "^16.8.6"
    },
    "devDependencies": {
        "@hot-loader/react-dom": "16.8.6",
        "@types/electron-devtools-installer": "^2.2.0",
        "@types/node": "^12.0.8",
        "@types/react": "^16.8.21",
        "@types/react-dom": "^16.8.4",
        "@types/react-hot-loader": "^4.1.0",
        "@types/webpack-env": "^1.13.9",
        "cross-env": "^5.2.0",
        "css-loader": "^1.0.0",
        "electron": "^5.0.4",
        "electron-builder": "^20.44.2",
        "electron-devtools-installer": "^2.2.4",
        "file-loader": "^4.0.0",
        "fork-ts-checker-webpack-plugin": "^1.3.7",
        "happypack": "5.0.0-beta.4",
        "html-webpack-plugin": "^3.2.0",
        "husky": "^2.4.1",
        "less": "2.7.3",
        "less-loader": "^5.0.0",
        "lint-staged": "^8.2.1",
        "mini-css-extract-plugin": "^0.7.0",
        "node-sass": "^4.12.0",
        "prettier": "^1.18.2",
        "react-hot-loader": "^4.11.1",
        "rimraf": "^2.6.3",
        "sass-loader": "^7.1.0",
        "source-map-loader": "^0.2.4",
        "style-loader": "^0.23.1",
        "ts-import-plugin": "^1.5.5",
        "ts-loader": "^6.0.3",
        "tsconfig-paths": "^3.8.0",
        "tslib": "^1.10.0",
        "tslint": "^5.17.0",
        "tslint-config-airbnb": "^5.11.1",
        "tslint-config-prettier": "^1.18.0",
        "tslint-react": "^4.0.0",
        "typescript": "^3.5.2",
        "url-loader": "^2.0.0",
        "webpack": "^4.34.0",
        "webpack-cli": "^3.3.4",
        "webpack-dev-server": "^3.7.2",
        "webpack-merge": "^4.2.1"
    }
}
